unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Grids;

type
  TForm1 = class(TForm)
    Memo1: TMemo;
    Button1: TButton;
    CheckBox1: TCheckBox;
    StringGrid2: TStringGrid;
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

const
  N = 4;
var
  Form1: Tform1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
const
  N1 = 16;
type
  Tabl = array[1..N, 1..N] of integer;
var
  A: Tabl;
  j,l,i,k: integer;
begin
  if CheckBox1.Checked then
    begin
      Memo1.Clear;
      Memo1.Lines.Add('Ход выполнения программы');
      Memo1.Lines.Add('1) Отключить "Информацию"');
      Memo1.Lines.Add('2) Произвести отображение');
      Memo1.Lines.Add('3) Изменить элементы массива*');
      Memo1.Lines.Add('4) Элементы целочисленого типа*');
      Memo1.Lines.Add('');
      Memo1.Lines.Add('* - необязательный пункт');
      Memo1.Lines.Add('');
    end
  else
    begin
      //считывание информации
      for i:=1 to N do
        begin
          for k:=1 to N do
              A[k,i] := StrToInt(StringGrid2.Cells[k,i]);
          end;
      //обратное отображение
      j := 1;
      for i:= N downto 1 do
        begin
          l := 1;
          for k:= N downto 1 do
            begin
              StringGrid2.Cells[l,j] := IntToStr(A[k,i]);
              Inc(l);
            end;
            Inc(j);
        end;
    end;
end;

procedure TForm1.FormCreate(Sender: TObject);
var
  i,k: integer;
begin
     StringGrid2.Cells[0,0] := 'Массив А';
     for i:=1 to N do
      begin
        StringGrid2.Cells[0, i] := 'i='+IntToStr(i);
        StringGrid2.Cells[i, 0] := 'k='+IntToStr(i);
      end;
      //начальное заполнение массива
      for i:=1 to N do
        for k:=1 to N do
          StringGRid2.Cells[k,i] := IntToStr((i-1)*N+k);
end;

end.

